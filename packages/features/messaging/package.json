{
  "name": "@nyoworks/feature-messaging",
  "version": "2.7.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema.ts",
    "./router": "./src/router.ts",
    "./hooks": "./src/hooks.ts"
  },
  "scripts": {

{
  "name": "@nyoworks/feature-auth-social",
  "version": "2.6.0",
  "description": "NYOWORKS Social Authentication Feature - OAuth integration for Google, Apple, GitHub",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schema": {
      "import": "./dist/schema.js",
      "types": "./dist/schema.d.ts"
    },
    "./router": {
      "import": "./dist/router.js",
      "types": "./dist/router.d.ts"
    },
    "./providers": {
      "import": "./dist/providers.js",
      "types": "./dist/providers.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/schema.ts src/router.ts src/providers.ts --format esm --dts",
    "dev": "tsup src/index.ts src/schema.ts src/router.ts src/providers.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@trpc/server": "^11.0.0",
    "drizzle-orm": "^0.38.0",
    "react": "^19.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.7.0"
  }
}

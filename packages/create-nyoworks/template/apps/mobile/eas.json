{
  "cli": {
    "version": ">= 10.0.0",
    "promptToConfigurePushNotifications": false
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "$APPLE_ID",
        "appleTeamId": "$APPLE_TEAM_ID",
        "ascAppId": "$ASC_APP_ID"
      },
      "android": {
        "serviceAccountKeyPath": "$ANDROID_SERVICE_ACCOUNT_PATH",
        "track": "production"
      }
    }
  }
}
